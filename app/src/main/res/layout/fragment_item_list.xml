<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.sndp.kunnathunadu.uniondatabank.fragments.UnionSakhaBranches"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.sndp.kunnathunadu.uniondatabank.fragments.UnionSakhaBranchesFragment"
        tools:listitem="@layout/fragment_item" />

    <net.bohush.geometricprogressview.GeometricProgressView
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:gp_color="@color/colorAccent"
        app:gp_duration="500"
        app:gp_number_of_angles="7" />

</RelativeLayout>
